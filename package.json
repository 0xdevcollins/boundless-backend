{
  "name": "boundless-backend",
  "version": "1.0.0",
  "description": "Backend for Boundless project with comprehensive authentication system",
  "main": "src/server.ts",
  "scripts": {
    "start": "node --no-deprecation ./node_modules/.bin/ts-node src/server.ts",
    "dev": "nodemon --exec \"node --no-deprecation ./node_modules/.bin/ts-node\" src/server.ts",
    "build": "tsc && mkdir -p dist/templates && cp src/templates/*.html dist/templates/",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prepare": "if [ \"$RENDER\" != \"true\" ]; then husky install; fi",
    "format": "prettier --write \"src/**/*.ts\"",
    "migrate:trustless-work": "ts-node scripts/migrate-trustless-work.ts",
    "test:trustless-work": "ts-node scripts/run-trustless-tests.ts",
    "test:email": "ts-node test-email.ts",
    "seed:blog": "ts-node src/seed-blog.ts",
    "seed:waitlist": "ts-node src/seed-waitlist.ts",
    "test:waitlist": "ts-node src/test-waitlist-seed.ts",
    "migrate:comments-posted": "ts-node src/migrations/add-comments-posted-field.ts"
  },
